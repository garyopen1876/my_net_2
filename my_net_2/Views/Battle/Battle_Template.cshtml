@{
    ViewBag.Title = "Home Page";
    var list = ViewBag.List;
 }

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <script src="https://unpkg.com/vue@2.6.14/dist/vue.js"></script>
    <title></title>
</head>
<body>
    <div class="jumbotron">
        <h1>請就戰鬥準備</h1>
        <p class="lead">點選開始戰鬥</p>
    </div>
    <form method="post">
        <div class="row">
            <div class="col-md-4">
                <p><a class="btn btn-default" id="button">開始打怪喽 &raquo;</a></p>
                <br />
                <div id="app">
                    <div id="list">
                    </div>
                </div>
            </div>
        
            <script>
                var app = new Vue({
                    el: '#app',
                    data: {
                        message: 'Hello World!'
                    },
                });
                var btn = document.getElementById("button");
                var list = document.getElementById("list");
                btn.addEventListener("click", function () {
                    this.innerText = "打爆";
                    /*透過innerHTML顯示陣列*/
                    list.innerHTML = '<div>@for (int i = 0; i < list.Count; i++){@Html.Raw($"{list [i]} ")<br />}</div>';
                })
            </script>
        </div>
    </form>
</body>
</html>
